generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// FTS5 Virtual Tables (created via raw SQL on startup)
// - task_history_fts: FTS5 index on TaskHistory.content for full-text search
// - Triggers: task_history_ai (after insert), task_history_ad (after delete), task_history_au (after update)
// Note: FTS5 virtual tables cannot be modeled in Prisma schema - managed in src/database/task-record.ts

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TaskQueue {
  id              String   @id @default(uuid())
  userId          String
  taskRecordId    String
  scheduledJobId  String?
  status          String   @default("pending")
  priority        Int      @default(0)
  workerId        String?
  attempts        Int      @default(0)
  maxAttempts     Int      @default(3)
  error           String?
  startedAt       DateTime?
  completedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([status, priority, createdAt])
  @@index([userId, taskRecordId, status])
  @@index([scheduledJobId])
}

model TaskRecord {
  id                   String   @id @default(uuid())
  userId               String
  status               String   @default("pending")
  requiresConfirmation Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  history              TaskHistory[]

  @@index([userId, id])
  @@index([userId, status])
}

model TaskHistory {
  id           String   @id @default(uuid())
  taskRecordId String
  role         String
  content      String
  iteration    Int?
  toolCallId   String?
  toolCalls    String?  // JSON string of tool_calls array
  createdAt    DateTime @default(now())

  taskRecord   TaskRecord @relation(fields: [taskRecordId], references: [id], onDelete: Cascade)

  @@index([taskRecordId, createdAt])
  @@index([taskRecordId, role])
}

model UserSession {
  id           String   @id @default(uuid())
  userId       String   @unique
  storageState String   @default("{}")  // JSON string of Playwright storage state
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ScheduledJob {
  id              String    @id @default(uuid())
  userId          String
  name            String
  task            String
  cronExpression  String?
  runAt           DateTime?
  timezone        String    @default("UTC")
  nextRunAt       DateTime
  lastRunAt       DateTime?
  lastStatus      String?
  lastError       String?
  maxRetries      Int       @default(3)
  retryCount      Int       @default(0)
  enabled         Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([userId, enabled, nextRunAt])
}
